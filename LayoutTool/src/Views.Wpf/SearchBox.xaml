<UserControl x:Class="LayoutTool.Views.Wpf.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LayoutTool.Views.Wpf"
             mc:Ignorable="d" 
             >
    <DockPanel VerticalAlignment="Center">
        <TextBlock Text="Search " DockPanel.Dock="Left" Margin="0,0,5,0" FontSize="14" FontWeight="Bold"/>
        <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" FontSize="14" FontWeight="Bold" MinWidth="100"/>
    </DockPanel>
</UserControl>
