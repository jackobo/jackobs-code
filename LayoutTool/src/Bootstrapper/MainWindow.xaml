<Window x:Class="LayoutTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutTool"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:interfaces="clr-namespace:LayoutTool.Interfaces;assembly=LayoutTool.Interfaces"
        Title="NDL Layout Tool"
        WindowState="Maximized">
        
    
        
    <DockPanel>
        <ContentControl prism:RegionManager.RegionName="{x:Static interfaces:RegionNames.Header}" DockPanel.Dock="Top"/>
        <ContentControl prism:RegionManager.RegionName="{x:Static interfaces:RegionNames.Footer}" DockPanel.Dock="Bottom"/>
        <ContentControl prism:RegionManager.RegionName="{x:Static interfaces:RegionNames.MainContent}"/>
        
    </DockPanel>
</Window>
