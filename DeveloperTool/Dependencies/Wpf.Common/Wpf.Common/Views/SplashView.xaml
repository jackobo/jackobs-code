<Window x:Class="Spark.Wpf.Common.Views.SplashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Spark.Wpf.Common.Views"
        Width="300" Height="300" 
        WindowStartupLocation="CenterScreen" 
        AllowsTransparency="true"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize">


    <Border CornerRadius="180,180,180,180" Background="White">
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock x:Name="txtTitle" Text="Loading..." Height="20" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>

            <Grid >
                <local:CircularProgressBar Width="220" Visibility="Visible" Margin="10" StartupDelay="0"/>
            </Grid>

        </Grid>
    </Border>
</Window>
